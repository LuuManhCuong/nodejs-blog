<form method="POST" action="" class="mt-4 col-5">
  <div class="mb-3">
    <label for="search-input" class="form-label">Nhập từ khóa</label>
    <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa">
  </div>

  <div class="mb-3">
    <label for="gender-input" class="form-label">chọn giới tính</label>
    <select type="text" name="gender" class="form-control" id="gender-input">
      <option value="male">Nam</option>
      <option value="female">Nữ</option>
    </select>
  </div>
  
  <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>